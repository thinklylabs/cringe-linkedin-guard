{
    "manifest_version": 3,
    "name": "Scroll Safe: ensures safe, non-cringe scrolling on linkedin feed using AI",
    "author": "Thinklylabs",
    "version": "0.0.6",
    "description": "AI-powered Chrome extension that filters cringe, clickbait & low-value posts from your LinkedIn feed in real-time.",
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://www.linkedin.com/feed/*"
            ]
        }
    ],
    "icons": {
        "16": "./images/image.png",
        "32": "./images/image.png",
        "48": "./images/image.png",
        "128": "./images/image.png"
    },
    "action": {
        "default_popup": "./pages/popup.html",
        "default_title": "Scroll Safe"
    },
    "options_page": "./pages/settings.html",
    "permissions": [
        "storage"
    ]
}